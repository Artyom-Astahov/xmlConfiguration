<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="location" value="classpath:application.properties"/>-->
<!--    </bean>-->

    <context:property-placeholder location="application.properties"/>


    <bean id="repo1" name="userRepository" class="by.artem.spring.database.repository.UserRepository" init-method="init" destroy-method="destroy">
        <constructor-arg name="userName" value="${db.username}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}"/>
        <constructor-arg name="args">
            <list>
                <value>1</value>
                <value>2</value>
                <value>3</value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <map>
                <entry key="user" value="Artem"/>
                <entry key="address" value="Ryazan"/>
            </map>
        </constructor-arg>
    </bean>
    <bean id="repo2" class="by.artem.spring.database.repository.UserRepository">
        <property name="userName" value="driver"/>
    </bean>

    <bean name="userDto" class="by.artem.spring.dto.UserDto" scope="prototype"/>

    <bean name="userMapper" class="by.artem.spring.mapper.UserMapper">
        <constructor-arg ref="userDto"/>
    </bean>

    <bean name="userService" class="by.artem.spring.service.UserService">
        <constructor-arg name="userMapper" ref="userMapper"/>
        <constructor-arg name="userRepository" ref="userRepository"/>
    </bean>



    <bean name="companyRepository" class="by.artem.spring.database.repository.CompanyRepository">
        <constructor-arg name="name" value="Google"/>
    </bean>

    <bean name="companyDto" class="by.artem.spring.dto.CompanyDto"/>
    <bean name="companyMapper" class="by.artem.spring.mapper.CompanyMapper">
        <constructor-arg ref="companyDto"/>
    </bean>
    <bean name="companyService" class="by.artem.spring.service.CompanyService">
        <constructor-arg name="companyMapper" ref="companyMapper"/>
        <constructor-arg name="companyRepository" ref="companyRepository"/>
    </bean>


</beans>